    {
      "type": "heading",
      "defaultValue": "Configuration"
    },
    {
      "type": "toggle",
      "messageKey": "vibrate",
      "label": "Turn on/off vibration",
      "defaultValue": false
    },
    {
      "type": "input",
      "messageKey": "daily_start_time",
