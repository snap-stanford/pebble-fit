},
{
  "type": "section",
  "items": [
    {
      "type": "heading",
      "defaultValue": "App Activation"
    },
    {
      "type": "text",
      "id": "optin_text",
      "defaultValue": "By activating this App, you agree to participate in this study."
    },
    {
      "type": "toggle",
      "messageKey": "optin",
      "label": "Activate pebble-fit App",
      "defaultValue": false
    }
