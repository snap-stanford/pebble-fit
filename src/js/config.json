        { 
          "label": "200",
          "value": 200 
        },
        { 
          "label": "100",
          "value": 100 
        },
        { 
          "label": "10",
          "value": 10 
        }
      ]
    },
    {
      "type": "select",
      "messageKey": "display_duration",
      "defaultValue": 10,
      "label": "How long will notification being displayed",
